{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Create Vocabulary</h1>
        {%  if errorMessage is not null %}
            <div class="alert alert-danger">
                <strong> Error! </strong> {{ errorMessage }}
            </div>
        {%  endif %}
    </div>
    <div class="container panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal" method="post">
                {% for form_item in form %}
                    {% if (form_item.vars.name != "_token" and form_item.vars.name != "save" and form_item.vars.name != "delete") %}
                        <div class="form-group">
                            <div class="col-md-2 control-label">
                                {{ form_label(form_item) }}
                            </div>
                            <div class="col-lg-4">
                                {{ form_widget(form_item) }}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
                {{ form_row(form._token) }}
                <input type="submit" name="" id="_submit" value="Save" class="obg-form-btn obg-submit-btn pull-right"/>
            </form>
        </div>
    </div>
{% endblock %}