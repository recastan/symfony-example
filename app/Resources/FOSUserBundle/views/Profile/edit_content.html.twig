{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="col-md-12">

        <h1>Edit User</h1>

        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} })  }}
        <div class="form-group">
            <label for="fos_user_registration_form[email]" class="col-md-2 control-label">Email Address</label>
            <div class="col-md-4">
                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email Address' } }) }}
            </div>
        </div>

        <div class="form-group">
            <label for="fos_user_registration_form[username]" class="col-md-2 control-label">Username</label>
            <div class="col-md-4">
                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Username' } }) }}
            </div>
        </div>

        <div class="form-group">
            <label for="fos_user_registration_form[username]" class="col-md-2 control-label">First Name</label>
            <div class="col-md-4">
                {{ form_widget(form.firstName, { 'attr': {'class': 'form-control', 'placeholder': 'Fisrt Name' } }) }}
            </div>
        </div>

        <div class="form-group">
            <label for="fos_user_registration_form[username]" class="col-md-2 control-label">Last Name</label>
            <div class="col-md-4">
                {{ form_widget(form.lastName, { 'attr': {'class': 'form-control', 'placeholder': 'Last Name' } }) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" class="btn obg-form-btn obg-clear-form-btn" id="_submit" name="_submit" value="Edit User" />
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>

